@{
}
@model Rookies_EcommerceWebsite.Customer.Models.Category

<div class="container mt-3 d-flex flex-column justify-content-start">
    <h2>@Model.Name</h2>
    @if(Model.Products.Count == 0)
    {
        <span>No data</span>
    }
    else
    {
        <div class="container-fluid p-0 mt-3 d-flex flex-wrap gap-4">
            @foreach(Product item in Model.Products)
            {
                <div class="card w-25">
                    <img src="@item.Images[0]" class="card-img-top img-thumbnail" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">
                            @item.Price.Value.ToString("n0")đ
                        </p>
                        <a href="/Product/Detail/@item.Slug" class="stretched-link"></a>
                    </div>
                </div>
            }
        </div>
    }
</div>