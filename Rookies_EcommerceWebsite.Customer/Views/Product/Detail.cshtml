@model Rookies_EcommerceWebsite.Customer.Models.Product


<div class="container-fluid mt-5 m-5" style="width: auto">
    <div class="row">
        <div class="col-7">
            <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @foreach (string item in Model.Images)
                    {
                        if(item == Model.Images.FirstOrDefault())
                        {
                            <div class="carousel-item active">
                                <img src="@item" class="d-block w-100" style="width: inherit; object-fit: contain" />
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img src="@item" class="d-block w-100" style="width: inherit; object-fit: contain" />
                            </div>
                        }
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
            <hr/>
            <p>@Model.Description</p>
        </div>
        <div class="col">
            <div class="d-block">
                <div style="height: 30vh">
                    <h2>@Model.Name</h2>
                    <h3 class="text-right">@Model.Price.Value.ToString("n0")đ</h3>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="ratings">
                        @for(int i = 1; i <= 5; i++){
                            if(i > Model.Ratings.Count)
                            {
                                <i class="fa fa-star rating-color"></i>
                            }
                            else
                            {
                                <i class="fa fa-star"></i>
                            }
                        }
                    </div>
                    <h5 class="review-count">@Model.Ratings.Count Review(s)</h5>
                </div>
                <div class="d-flex justify-content-end">
                    <div class="input-group mb-4 w-25">
                        <span class="input-group-prepend">
                            <button type="button" class="btn btn-primary btn-number" disabled="disabled" data-type="minus" data-field="quant[1]">
                                <i class="fas fa-minus"></i>
                            </button>
                        </span>
                        <input type="text" name="quant[1]" class="form-control input-number text-center" value="1" min="1" max="10">
                        <span class="input-group-append">
                            <button type="button" class="btn btn-primary btn-number" data-type="plus" data-field="quant[1]">
                                <i class="fas fa-plus"></i>
                            </button>
                        </span>
                    </div>

                </div>
                <div class="d-grid gap-3">
                    <button class="btn btn-primary btn-lg btn-block" type="submit">Add to Cart</button>
                    <button class="btn btn-primary btn-lg btn-block">Buy now</button>
                </div>   
                
            </div>
        </div>
    </div>
</div>